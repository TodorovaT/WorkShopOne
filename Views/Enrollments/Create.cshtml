@model WorkShop1.Models.Enrollment

@{
    ViewData["Title"] = "Креирај запишување";
}

<h2>Креирај запишување</h2>

<h4>Запишување</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Студент</label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId">
                    <option value="">Селектирај</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Предмет</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                    <option value="">Селектирај</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад кон листата</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
